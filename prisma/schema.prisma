// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id            String   @id @default(uuid())
  email         String   @unique
  passwordHash  String?  @map("password_hash")
  firstName     String   @map("first_name")
  lastName      String   @map("last_name")
  phone         String?
  role          String   @default("member")
  paymentStatus String   @default("unpaid") @map("payment_status")
  paymentYear   Int?     @map("payment_year")
  paidSeasonId  String?  @map("paid_season_id")
  isActive      Boolean  @default(true) @map("is_active")
  googleId      String?  @unique @map("google_id")
  createdAt     DateTime @default(now()) @map("created_at")
  updatedAt     DateTime @updatedAt @map("updated_at")

  paidSeason       Season? @relation("UserPaidSeason", fields: [paidSeasonId], references: [id])
  seasonPayments   SeasonPayment[]
  eventAttendances EventAttendee[]
  rideAttendances  RideAttendee[]

  @@index([isActive], name: "idx_users_active")
  @@index([paidSeasonId], name: "idx_users_paid_season")
  @@map("users")
}

model Route {
  id             String   @id @default(uuid())
  name           String
  description    String?
  distanceKm     Float    @map("distance_km")
  elevationM     Int?     @map("elevation_m")
  difficulty     String?
  gpxData        String   @map("gpx_data")
  startLocation  String?  @map("start_location")
  region         String?
  timesRidden    Int      @default(0) @map("times_ridden")
  lastRidden     DateTime? @map("last_ridden")
  createdAt      DateTime @default(now()) @map("created_at")

  scheduledRides       ScheduledRide[] @relation("ScheduledRideRoute")
  weatherBackupRides   ScheduledRide[] @relation("WeatherBackupRoute")
  rideHistory          RideHistory[]

  @@map("routes")
}

model Season {
  id          String   @id @default(uuid())
  year        Int      @unique
  startDate   DateTime @map("start_date")
  endDate     DateTime @map("end_date")
  isActive    Boolean  @default(false) @map("is_active")
  createdAt   DateTime @default(now()) @map("created_at")

  scheduledRides ScheduledRide[]
  paidMembers    User[] @relation("UserPaidSeason")
  seasonPayments SeasonPayment[]

  @@map("seasons")
}

model SeasonPayment {
  id        String   @id @default(uuid())
  userId    String   @map("user_id")
  seasonId  String   @map("season_id")
  paidAt    DateTime @default(now()) @map("paid_at")
  amount    Float?
  notes     String?
  createdAt DateTime @default(now()) @map("created_at")

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  season Season @relation(fields: [seasonId], references: [id], onDelete: Cascade)

  @@unique([userId, seasonId])
  @@index([userId])
  @@index([seasonId])
  @@map("season_payments")
}

model ScheduledRide {
  id             String   @id @default(uuid())
  seasonId       String   @map("season_id")
  routeId        String   @map("route_id")
  rideDate       DateTime @map("ride_date")
  team           String   @default("A")
  startTime      String   @default("09:00:00") @map("start_time")
  status         String   @default("scheduled")
  notes          String?
  weatherBackup  String?  @map("weather_backup")
  createdAt      DateTime @default(now()) @map("created_at")

  season         Season   @relation(fields: [seasonId], references: [id])
  route          Route    @relation("ScheduledRideRoute", fields: [routeId], references: [id])
  backupRoute    Route?   @relation("WeatherBackupRoute", fields: [weatherBackup], references: [id])
  attendees      RideAttendee[]

  @@unique([rideDate, team])
  @@index([rideDate], name: "idx_scheduled_rides_date")
  @@map("scheduled_rides")
}

model RideAttendee {
  id        String   @id @default(uuid())
  rideId    String   @map("ride_id")
  userId    String   @map("user_id")
  status    String   @default("attending") // attending, maybe, declined
  createdAt DateTime @default(now()) @map("created_at")

  ride ScheduledRide @relation(fields: [rideId], references: [id], onDelete: Cascade)
  user User          @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([rideId, userId])
  @@index([rideId])
  @@index([userId])
  @@map("ride_attendees")
}

model Event {
  id          String   @id @default(uuid())
  title       String
  description String?
  eventDate   DateTime @map("event_date")
  eventTime   String?  @map("event_time")
  location    String?
  eventType   String?  @map("event_type")
  createdAt   DateTime @default(now()) @map("created_at")

  attendees   EventAttendee[]

  @@map("events")
}

model EventAttendee {
  id        String   @id @default(uuid())
  eventId   String   @map("event_id")
  userId    String   @map("user_id")
  status    String   @default("attending") // attending, maybe, declined
  createdAt DateTime @default(now()) @map("created_at")

  event Event @relation(fields: [eventId], references: [id], onDelete: Cascade)
  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([eventId, userId])
  @@index([eventId])
  @@index([userId])
  @@map("event_attendees")
}

model RideHistory {
  id               String   @id @default(uuid())
  routeId          String   @map("route_id")
  rideDate         DateTime @map("ride_date")
  seasonYear       Int      @map("season_year")
  weekNumber       Int      @map("week_number")
  participantCount Int?     @map("participant_count")
  notes            String?

  route Route @relation(fields: [routeId], references: [id])

  @@index([weekNumber, seasonYear], name: "idx_ride_history_week")
  @@map("ride_history")
}
